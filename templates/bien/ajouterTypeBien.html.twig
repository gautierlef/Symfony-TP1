{% extends 'base.html.twig' %}

{% block title %}Ajouter type{% endblock %}

{% block body %}
    <center><div style="width: 50%; border: 1px solid black; background-color: background"><br/>
    {{ form_start(form) }}
    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
    {{ form_errors(form) }}
    <h3><center>Formulaire d'ajout de type de bien :</center></h3>
    <div class="well">
    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
    {{ form_errors(form) }}
    <div class="form-group">
    {{ form_label(form.libelle, "Libellé de la catégorie", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
    {{ form_errors(form.libelle) }}
    <div class="col-sm-4">
    {{ form_widget(form.libelle, {'attr': {'class': 'form-control'}}) }}
    </div>
    </div>
    {{ form_widget(form) }}
    <br/>
    <br/>
        <div class="row">
            <div>
                <button type="reset" class="btn btn-danger">Annuler</button>
                <button style="margin-left: 20px" type="submit" class="btn btn-success">Valider</button>
            </div>
         </div>
    <br/>
    {{ form_end(form) }}
    </div></center>
    {% if success == 1 %}
        <br/><br/>
        <center><div class="btn btn-success">
            <a style="color:white">Type ajouté avec succès!</a>
        </div></center>
    {% endif %}
    {% if success == -1 %}
        <br/><br/>
        <center><div class="btn btn-danger">
            <a style="color:white">Ce type existe déjà!</a>
        </div></center>
    {% endif %}
{% endblock %}
